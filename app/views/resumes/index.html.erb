<% if !flash[:notice].blank? %>
    <div class = "alert alert-info">
      <%= flash[:notice] %>
    </div>
<% end %>

<br />

<%= link_to "New Resume", new_resume_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
  <thead>.
  <tr>
    <th>Name</th>
    <th>File name</th>
    <th>File path</th>
    <th>File size</th>
    <th>Download Link</th>
    <th> </th>
  </tr>
  </thead>

  <tbody>
  <% @resumes.each do |resume| %>

      <tr>
        <td><%= resume.name %></td>
        <td><%= resume.file_name %></td>
        <td><%= resume.file_path %></td>
        <td><%= resume.file_size %></td>
        <td><%= link_to "Download Resume", resume.attachment_url %></td>
        <td><%= button_to "Delete",  resume, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{resume.name}?" %></td>
      </tr>

  <% end %>
  </tbody>

</table>

<div><%= button_to "Log out", logout_path, method: :delete, class: "btn btn-danger" %></div>